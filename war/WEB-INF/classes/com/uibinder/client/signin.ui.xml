<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:style src='signIn.css' />
	<m:MaterialRow backgroundColor="GREY_LIGHTEN_4"
		addStyleNames="{style.login_demo}">
		<m:MaterialColumn grid="s12 m6 l6" offset="l3 m3">
		    		    <m:MaterialPanel>
		    <m:MaterialTitle title="Bulletin" description="Short Stories of your Surroundings"></m:MaterialTitle>
		    </m:MaterialPanel>
			<m:MaterialPanel shadow="1" addStyleNames="{style.panel}">
				<m:MaterialPanel addStyleNames="{style.fieldPanel}">
					<m:MaterialImage url="http://b.vimeocdn.com/ps/339/488/3394886_300.jpg"
						type="CIRCLE" addStyleNames="{style.imgProfile} z-depth-1" />
					<m:MaterialTextBox label="User Name" ui:field="in_username" />
					<m:MaterialTextBox label="Pasword" ui:field="in_password" />
					<m:MaterialButton text="Sign In" backgroundColor="BLUE"
						ui:field="signin" textColor="WHITE" />
					<m:MaterialLabel text="" ui:field="error_label"
						textColor="RED" />
					<m:MaterialRow addStyleNames="{style.rowAction}">
						<m:MaterialColumn grid="s12 m12 l6">
						<m:MaterialCheckBox text="Keep me logged in" ui:field="rememberMe" />
						</m:MaterialColumn>
						<m:MaterialColumn grid="s12 m12 l6">
						    <m:MaterialLink ui:field="register" text="Register ?">
						        
						    </m:MaterialLink>
						</m:MaterialColumn>
					</m:MaterialRow>
				</m:MaterialPanel>
			</m:MaterialPanel>
		</m:MaterialColumn>
	</m:MaterialRow>
</ui:UiBinder> 